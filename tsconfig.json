{
  "compilerOptions": {
    "target": "ES2020",
    // "lib": [],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types", "./node_modules/@violentmonkey" ]
  },
  "exclude": [ "./*.js" ]
}
