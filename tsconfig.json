{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "types": [
      "@violentmonkey/types", "youtube"
    ],
    "removeComments": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build/"
  ]
}
